<script type="text/javascript"> 
  var pos = 0;
 var max = 0;
 var refreshIntervalId = 0;
 
 
 function addmark(map, markerBounds, mark, location, name, add, clasR) {
 
    var iconCol = "red";
    if(clasR == 'A') iconCol = "green";
    else if(clasR == 'B') iconCol = "orange";
    else if(clasR == 'C') iconCol = "yellow";
    else if(clasR == 'D') iconCol = "red";
    
     //create marker
    mark = new google.maps.Marker({
        position: location,
        map: map,
        icon: new google.maps.MarkerImage("http://maps.google.com/mapfiles/ms/micons/" + iconCol + "-dot.png",null,null,null,new google.maps.Size(40, 40)),
        title: name + ": " + add
    });
    
     markerBounds.extend(location);
     if(pos < 10) map.fitBounds(markerBounds);
    
    var infowindow = new google.maps.InfoWindow({
                    content: "<b>"+name + ": " +add+"</b>"
            });
            
    //add listeners
    google.maps.event.addListener(mark, 'click', function() {
      infowindow.open(map,mark);
    });
    
    /*google.maps.event.addListener(infowindow, 'closeclick', function() {
      map.setCenter(marker.getPosition()); 
    });*/
 }
  
 function drawMap(map, markerBounds, name, add, mark, Ida, clasR) {
   ++pos;
   if(pos > max-2) {
      clearInterval(refreshIntervalId);
   }
   var geocoder = new google.maps.Geocoder();
   geocoder.geocode( { address: add}, function(results, status) {
        if (status == google.maps.GeocoderStatus.OK && results.length) {
          if (status != google.maps.GeocoderStatus.ZERO_RESULTS) {
          
            
            var cli = new sforce.SObject("Account"); 
            cli.id = Ida; 
            cli.Localizacion__latitude__s = results[0].geometry.location.lat(); 
            cli.Localizacion__longitude__s = results[0].geometry.location.lng(); 
            cli.Actualizar_direccion__c = true; 
            result = sforce.connection.update([cli]); 
            
            addmark(map, markerBounds, mark, results[0].geometry.location, name, add, clasR);
            
          }
        } 
      });
}


$(document).ready(function() {

  var myOptions = {
    zoom: 20,
    mapTypeId: google.maps.MapTypeId.ROADMAP,
    mapTypeControl: true
  }
  
  
  var geocoder = new google.maps.Geocoder();
  
  try {
      //obtener recomendadores de la base de datos
      var allAddresses = sforce.connection.query("Select a.Id, a.Name, a.Calle__c, a.Ciudad__c, a.Provincia__c, a.Codigo_postal__c, a.Pais__c, a.Clasificacion_tipo_recomendador__c From Account a WHERE a.RecordTypeId = \'012b0000000QAd7AAG\' and a.Actualizar_direccion__c = false and a.Id in(SELECT o.Empresa_Recomendadora__c FROM Oportunidad_platform__c o WHERE o.Centro2__c = \'{!Account.Id}\')");    
      var allAddressesWithGeo = sforce.connection.query("Select a.Id, a.Name, a.Calle__c, a.Ciudad__c, a.Provincia__c, a.Codigo_postal__c, a.Clasificacion_tipo_recomendador__c, a.Pais__c, a.Localizacion__latitude__s, a.Localizacion__longitude__s From Account a WHERE a.RecordTypeId = \'012b0000000QAd7AAG\' and a.Actualizar_direccion__c = true and a.Id in(SELECT o.Empresa_Recomendadora__c FROM Oportunidad_platform__c o WHERE o.Centro2__c = \'{!Account.Id}\')"); 
  }
  catch(error) {
      alert(error.faultstring);
  }
  
  var markerBounds = new google.maps.LatLngBounds();
  var map = new google.maps.Map(document.getElementById("map"), myOptions);
  var markers = [];
  var markersWL = [];
  
  //obtiene las direcciones
  var names = [];
  var addresses = [];
  var clasRec = [];
  var ids = [];
  if(allAddresses.size == 0 && allAddressesWithGeo.size == 0) {
      $('#map').css({'height' : '15px'});
      $('#map').html("{!Account.Name} no tiene ninguna empresa recomendadora con direcciÃ³n.");
      resizeIframe();
  }
 
  if(allAddressesWithGeo.size == 1) {
      var add = allAddressesWithGeo.records.get("Calle__c") + ', ' + allAddressesWithGeo.records.get("Ciudad__c") + ', ' + allAddressesWithGeo.records.get("Codigo_postal__c") + ', ' + allAddressesWithGeo.records.get("Pais__c");
      addmark(map, markerBounds, markersWL[0],  new google.maps.LatLng(allAddressesWithGeo.records.get("Localizacion__Latitude__s"), allAddressesWithGeo.records.get("Localizacion__Longitude__s")), allAddressesWithGeo.records.get("Name"), add, allAddressesWithGeo.records.get("Clasificacion_tipo_recomendador__c"));
  }
  else if(allAddressesWithGeo.size > 1) {
      for(var i = 0; i < allAddressesWithGeo.size; i++) {
          var add = allAddressesWithGeo.records[i].get("Calle__c") + ', ' + allAddressesWithGeo.records[i].get("Ciudad__c") + ', ' + allAddressesWithGeo.records[i].get("Codigo_postal__c") + ', ' + allAddressesWithGeo.records[i].get("Pais__c");
          addmark(map, markerBounds, markersWL[i],  new google.maps.LatLng(allAddressesWithGeo.records[i].get("Localizacion__Latitude__s"), allAddressesWithGeo.records[i].get("Localizacion__Longitude__s")), allAddressesWithGeo.records[i].get("Name"), add, allAddressesWithGeo.records[i].get("Clasificacion_tipo_recomendador__c"));
      }
  }
  
  if(allAddresses.size > 1) {
      addresses[0] = allAddresses.records[0].get("Calle__c") + ', ' + allAddresses.records[0].get("Ciudad__c") + ', ' + allAddresses.records[0].get("Codigo_postal__c") + ', ' + allAddresses.records[0].get("Pais__c");
      ids[0] = allAddresses.records[0].get("Id");
      names[0] = allAddresses.records[0].get("Name");
      clasRec[0] = allAddresses.records[0].get("Clasificacion_tipo_recomendador__c");
      for (var i=1; i<allAddresses.size; i++) {
          ids[i] = allAddresses.records[i].get("Id");
          names[i] = allAddresses.records[i].get("Name");
          addresses[i] = allAddresses.records[i].get("Calle__c") + ', ' + allAddresses.records[i].get("Ciudad__c") + ', ' + allAddresses.records[i].get("Codigo_postal__c") + ', ' + allAddresses.records[i].get("Pais__c");
          clasRec[i] = allAddresses.records[i].get("Clasificacion_tipo_recomendador__c");
      }
  }
  else if(allAddresses.size == 1) {
    ids[0] = allAddresses.records.get("Id");
    addresses[0] = allAddresses.records.get("Calle__c") + ', ' + allAddresses.records.get("Ciudad__c") + ', ' + allAddresses.records.get("Codigo_postal__c") + ', ' + allAddresses.records.get("Pais__c");
    names[0] = allAddresses.records.get("Name");
    clasRec[0] = allAddresses.records.get("Clasificacion_tipo_recomendador__c");
  }
  
//dibuja el mapa con las direcciones
  refreshIntervalId = setInterval(function(){drawMap(map, markerBounds, names[pos], addresses[pos], markers[pos], ids[pos], clasRec[pos])}, 250);

  
  function resizeIframe() {
    var me = window.name;
    if (me) {
      var iframes = parent.document.getElementsByName(me);
      if (iframes && iframes.length == 1) {
        height = document.body.offsetHeight;
        iframes[0].style.height = height + "px";
      }
    }
  }
  
});
</script>
 
